<config name="galaxy">
  <entry key="starCount" type="number" description="Количество звёзд, создаваемых при генерации галактики.">70</entry>
  <entry key="radius" type="number" description="Радиус распределения звёзд относительно центра галактики.">120</entry>
  <entry key="thickness" type="number" description="Толщина диска галактики вдоль оси Y.">14</entry>
  <entry key="rotationSpeed" type="number" description="Скорость вращения звёздного массива в радианах за кадр.">0.01</entry>
  <entry key="groupTilt" type="object" description="Наклон дальних и ближних рукавов для создания объёма.">
    <entry key="far" type="number" description="Наклон дальних групп в градусах относительно плоскости галактики.">78</entry>
    <entry key="near" type="number" description="Наклон ближних групп в градусах относительно плоскости галактики.">45</entry>
  </entry>
  <entry key="heightRange" type="object" description="Параметры распределения высоты звёзд над плоскостью галактики.">
    <entry key="base" type="number" description="Базовое значение высоты для звёзд.">0.6</entry>
    <entry key="thicknessFactor" type="number" description="Множитель, влияющий на высоту в зависимости от толщины диска.">0.17</entry>
  </entry>
  <entry key="zoom" type="object" description="Настройки масштабирования камеры в режиме галактики.">
    <entry key="step" type="number" description="Шаг изменения масштаба за единичное действие пользователя.">0.16</entry>
    <entry key="enterThreshold" type="number" description="Порог масштаба, при котором запускается переход в систему.">1.28</entry>
    <entry key="cameraLimit" type="number" description="Максимальное значение прогресса, влияющего на приближение камеры перед переходом в систему.">1</entry>
    <entry key="damping" type="number" description="Сила сглаживания переходов масштаба камеры.">6</entry>
  </entry>
  <entry key="camera" type="object" description="Параметры поведения камеры при движении по галактике.">
    <entry key="offset" type="object" description="Начальные и конечные смещения камеры относительно корабля.">
      <entry key="startY" type="number" description="Вертикальное смещение камеры в начале движения.">72</entry>
      <entry key="endY" type="number" description="Вертикальное смещение камеры при приближении к центру.">34</entry>
      <entry key="startZ" type="number" description="Глубинное смещение камеры в начале движения.">215</entry>
      <entry key="endZ" type="number" description="Глубинное смещение камеры при приближении к центру.">122</entry>
    </entry>
    <entry key="follow" type="object" description="Настройки сглаживания следования камеры за кораблём.">
      <entry key="rate" type="number" description="Скорость интерполяции камеры к цели.">4.5</entry>
      <entry key="min" type="number" description="Минимальный коэффициент сглаживания движения камеры.">0.05</entry>
      <entry key="max" type="number" description="Максимальный коэффициент сглаживания движения камеры.">0.16</entry>
    </entry>
  </entry>
  <entry key="ship" type="object" description="Настройки поведения корабля в галактическом режиме.">
    <entry key="approachAltitude" type="number" description="Высота, на которую корабль поднимается при приближении к системе.">6</entry>
  </entry>
  <entry key="cameraBaseOffset" type="object" description="Базовое смещение камеры при первичной загрузке сцены.">
    <entry key="x" type="number" description="Смещение камеры по оси X.">0</entry>
    <entry key="y" type="number" description="Смещение камеры по оси Y.">52</entry>
    <entry key="z" type="number" description="Смещение камеры по оси Z.">165</entry>
  </entry>
  <entry key="star" type="object" description="Параметры визуализации звёзд.">
    <entry key="geometry" type="object" description="Настройки геометрии звёзд.">
      <entry key="radius" type="number" description="Радиус сферической геометрии звезды.">1.4</entry>
      <entry key="widthSegments" type="number" description="Количество сегментов по ширине сферы.">24</entry>
      <entry key="heightSegments" type="number" description="Количество сегментов по высоте сферы.">24</entry>
    </entry>
    <entry key="color" type="object" description="Настройки генерации цвета звёзд.">
      <entry key="palette" type="array" description="Доступные варианты оттенков звёзд.">
        <item type="object" description="Красная звезда">
          <entry key="hue" type="number" description="Оттенок в модели HSL.">0.02</entry>
          <entry key="saturation" type="number" description="Насыщенность цвета.">0.78</entry>
          <entry key="lightness" type="number" description="Яркость цвета.">0.56</entry>
          <entry key="emissiveMultiplier" type="number" description="Усиление свечения.">0.8</entry>
        </item>
        <item type="object" description="Жёлтая звезда">
          <entry key="hue" type="number">0.12</entry>
          <entry key="saturation" type="number">0.72</entry>
          <entry key="lightness" type="number">0.62</entry>
          <entry key="emissiveMultiplier" type="number">0.75</entry>
        </item>
        <item type="object" description="Белая звезда">
          <entry key="hue" type="number">0</entry>
          <entry key="saturation" type="number">0.04</entry>
          <entry key="lightness" type="number">0.92</entry>
          <entry key="emissiveMultiplier" type="number">0.7</entry>
        </item>
        <item type="object" description="Голубая звезда">
          <entry key="hue" type="number">0.58</entry>
          <entry key="saturation" type="number">0.64</entry>
          <entry key="lightness" type="number">0.68</entry>
          <entry key="emissiveMultiplier" type="number">0.85</entry>
        </item>
      </entry>
      <entry key="variance" type="object" description="Разброс параметров оттенков.">
        <entry key="hue" type="number" description="Допустимое отклонение оттенка.">0.015</entry>
        <entry key="saturation" type="number" description="Допустимое отклонение насыщенности.">0.06</entry>
        <entry key="lightness" type="number" description="Допустимое отклонение яркости.">0.05</entry>
      </entry>
      <entry key="emissiveMultiplier" type="number" description="Значение по умолчанию для усиления свечения.">0.7</entry>
    </entry>
    <entry key="material" type="object" description="Параметры материала для звёзд.">
      <entry key="emissiveIntensity" type="number" description="Интенсивность эмиссионного свечения материала.">1.5</entry>
      <entry key="roughness" type="number" description="Шероховатость материала звезды.">0.25</entry>
      <entry key="metalness" type="number" description="Металличность материала звезды.">0.1</entry>
    </entry>
    <entry key="name" type="object" description="Настройки генерации названий звёздных систем.">
      <entry key="prefix" type="string" description="Префикс для имени звёздной системы.">Система </entry>
      <entry key="min" type="number" description="Минимальное числовое значение для генерации названия.">100</entry>
      <entry key="maxRange" type="number" description="Диапазон увеличения числовой части имени.">900</entry>
    </entry>
    <entry key="hover" type="object" description="Параметры отображения дистанции при наведении на звезду.">
      <entry key="lineColor" type="string" description="Цвет луча от корабля до звезды.">#ffffff</entry>
      <entry key="lineOpacity" type="number" description="Прозрачность луча.">0.65</entry>
      <entry key="labelOffset" type="number" description="Высота подписи расстояния над звездой.">6</entry>
    </entry>
  </entry>
</config>
