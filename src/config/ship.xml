<config name="ship" title="Корабль">
  <entry key="speeds" type="object" description="Скорости перемещения корабля в разных режимах." title="Скорости">
    <entry key="galaxy" type="number" description="Скорость перемещения корабля по галактической карте." title="Галактика">12</entry>
    <entry key="system" type="number" description="Скорость перемещения корабля внутри системы." title="Система">9</entry>
  </entry>
  <entry key="movement" type="object" description="Параметры следования и остановки корабля." title="Движение">
    <entry key="follow" type="object" description="Настройки сглаживания движения корабля." title="Следование">
      <entry key="rate" type="number" description="Скорость интерполяции корабля к целевой точке." title="Скорость следования">8</entry>
      <entry key="min" type="number" description="Минимальный коэффициент сглаживания." title="Минимальное сглаживание">0.08</entry>
      <entry key="max" type="number" description="Максимальный коэффициент сглаживания." title="Максимальное сглаживание">0.55</entry>
    </entry>
    <entry key="arrivalThreshold" type="number" description="Расстояние до цели, при котором корабль считает, что прибыл." title="Порог прибытия">0.05</entry>
  </entry>
  <entry key="geometry" type="object" description="Размеры и детализация модели корабля." title="Геометрия">
    <entry key="radius" type="number" description="Радиус корпуса корабля." title="Радиус">0.7</entry>
    <entry key="height" type="number" description="Высота корпуса корабля." title="Высота">2.2</entry>
    <entry key="radialSegments" type="number" description="Количество сегментов вокруг корпуса." title="Сегменты">12</entry>
  </entry>
  <entry key="material" type="object" description="Параметры материала корабля." title="Материал">
    <entry key="color" type="string" description="Основной цвет корпуса корабля." title="Цвет">#ffdd55</entry>
    <entry key="roughness" type="number" description="Шероховатость материала корпуса." title="Шероховатость">0.3</entry>
    <entry key="metalness" type="number" description="Металличность материала корпуса." title="Металличность">0.4</entry>
    <entry key="emissive" type="string" description="Цвет свечения корпуса." title="Цвет свечения">#332200</entry>
    <entry key="emissiveIntensity" type="number" description="Интенсивность эмиссионного свечения корпуса." title="Интенсивность свечения">0.6</entry>
  </entry>
  <entry key="rotation" type="object" description="Поворот корабля относительно осей." title="Поворот">
    <entry key="x" type="number" description="Угол поворота корабля вокруг оси X." title="Угол X">90</entry>
  </entry>
  <entry key="trail" type="object" description="Параметры выхлопного шлейфа корабля." title="Шлейф">
    <entry key="radiusTop" type="number" description="Радиус верхней части шлейфа." title="Радиус сверху">0.2</entry>
    <entry key="radiusBottom" type="number" description="Радиус нижней части шлейфа." title="Радиус снизу">0</entry>
    <entry key="height" type="number" description="Высота шлейфа." title="Высота">1.6</entry>
    <entry key="radialSegments" type="number" description="Количество сегментов шлейфа по окружности." title="Сегменты">8</entry>
    <entry key="openEnded" type="boolean" description="Флаг, определяющий открыт ли низ шлейфа." title="Открытый низ">true</entry>
    <entry key="color" type="string" description="Цвет свечения шлейфа." title="Цвет">#77c6ff</entry>
    <entry key="opacity" type="number" description="Прозрачность шлейфа." title="Прозрачность">0.55</entry>
    <entry key="offsetZ" type="number" description="Смещение шлейфа относительно корабля по оси Z." title="Смещение Z">-0.8</entry>
  </entry>
</config>

