<config name="orbit" title="Орбита">
  <entry key="radius" type="object" description="Диапазон и базовые значения орбиты планеты." title="Радиус орбиты">
    <entry key="min" type="number" description="Минимально допустимый радиус орбиты." title="Минимум">20</entry>
    <entry key="max" type="number" description="Максимально допустимый радиус орбиты." title="Максимум">40</entry>
    <entry key="base" type="number" description="Базовый радиус, используемый для генерации." title="Базовый радиус">25</entry>
    <entry key="initial" type="number" description="Начальный радиус орбиты при входе в режим." title="Начальный радиус">22</entry>
  </entry>
  <entry key="zoom" type="object" description="Настройки масштабирования камеры вокруг планеты." title="Масштабирование">
    <entry key="step" type="object" description="Шаги изменения масштаба при отдалении и приближении." title="Шаг масштабирования">
      <entry key="min" type="number" description="Минимальный шаг масштабирования." title="Минимальный шаг">1.2</entry>
      <entry key="max" type="number" description="Максимальный шаг масштабирования." title="Максимальный шаг">3.6</entry>
    </entry>
    <entry key="bufferIncrement" type="number" description="Скорость накопления буфера масштабирования." title="Нарастание буфера">0.25</entry>
    <entry key="bufferMagnitudeMultiplier" type="number" description="Множитель, влияющий на силу буфера масштабирования." title="Множитель буфера">0.35</entry>
    <entry key="bufferDecrement" type="number" description="Скорость уменьшения буфера масштабирования при бездействии." title="Спад буфера">0.2</entry>
    <entry key="radiusExitThreshold" type="number" description="Относительный порог радиуса для выхода из режима орбиты." title="Порог выхода">0.5</entry>
  </entry>
  <entry key="camera" type="object" description="Параметры камеры в орбитальном режиме." title="Камера">
    <entry key="offsetY" type="object" description="Диапазон вертикального смещения камеры." title="Вертикальное смещение">
      <entry key="min" type="number" description="Минимальное значение смещения камеры по оси Y." title="Минимум">6</entry>
      <entry key="max" type="number" description="Максимальное значение смещения камеры по оси Y." title="Максимум">14</entry>
    </entry>
    <entry key="offsetZ" type="object" description="Диапазон смещения камеры по глубине." title="Глубинное смещение">
      <entry key="min" type="number" description="Минимальное значение смещения камеры по оси Z." title="Минимум">10</entry>
      <entry key="max" type="number" description="Максимальное значение смещения камеры по оси Z." title="Максимум">26</entry>
    </entry>
    <entry key="follow" type="object" description="Настройки следования камеры за кораблём на орбите." title="Следование">
      <entry key="rate" type="number" description="Скорость догоняющей интерполяции камеры." title="Скорость следования">5</entry>
      <entry key="min" type="number" description="Минимальный коэффициент сглаживания." title="Минимальное сглаживание">0.05</entry>
      <entry key="max" type="number" description="Максимальный коэффициент сглаживания." title="Максимальное сглаживание">0.2</entry>
    </entry>
    <entry key="entryPosition" type="object" description="Позиция камеры при входе в режим орбиты." title="Позиция входа">
      <entry key="x" type="number" description="Координата камеры по оси X при входе." title="Координата X">0</entry>
      <entry key="y" type="number" description="Координата камеры по оси Y при входе." title="Координата Y">0</entry>
      <entry key="z" type="number" description="Координата камеры по оси Z при входе." title="Координата Z">48</entry>
    </entry>
  </entry>
  <entry key="controls" type="object" description="Чувствительность управления орбитой." title="Управление">
    <entry key="thetaSpeed" type="number" description="Скорость вращения по горизонтальной оси (theta)." title="Скорость по theta">0.6</entry>
    <entry key="phiSpeed" type="number" description="Скорость вращения по вертикальной оси (phi)." title="Скорость по phi">0.7</entry>
    <entry key="thetaClamp" type="number" description="Максимальный наклон по горизонтальной оси." title="Ограничение наклона">0.2</entry>
  </entry>
  <entry key="initialAngles" type="object" description="Стартовые углы камеры при переходе на орбиту." title="Начальные углы">
    <entry key="theta" type="number" description="Начальный угол theta в градусах." title="Угол theta">90</entry>
    <entry key="phi" type="number" description="Начальный угол phi в градусах." title="Угол phi">0</entry>
  </entry>
  <entry key="surface" type="object" description="Параметры поверхности планеты." title="Поверхность">
    <entry key="radius" type="number" description="Радиус сферической поверхности планеты." title="Радиус">18</entry>
    <entry key="widthSegments" type="number" description="Количество сегментов по ширине для геометрии поверхности." title="Сегменты по ширине">64</entry>
    <entry key="heightSegments" type="number" description="Количество сегментов по высоте для геометрии поверхности." title="Сегменты по высоте">64</entry>
    <entry key="material" type="object" description="Материал поверхности планеты." title="Материал поверхности">
      <entry key="roughness" type="number" description="Шероховатость материала поверхности." title="Шероховатость">1</entry>
      <entry key="metalness" type="number" description="Металличность материала поверхности." title="Металличность">0.05</entry>
    </entry>
  </entry>
  <entry key="atmosphere" type="object" description="Настройки визуализации атмосферы планеты." title="Атмосфера">
    <entry key="radius" type="number" description="Радиус оболочки атмосферы." title="Радиус">18.5</entry>
    <entry key="widthSegments" type="number" description="Количество сегментов по ширине для атмосферы." title="Сегменты по ширине">48</entry>
    <entry key="heightSegments" type="number" description="Количество сегментов по высоте для атмосферы." title="Сегменты по высоте">48</entry>
    <entry key="opacity" type="number" description="Прозрачность атмосферного слоя." title="Прозрачность">0.25</entry>
    <entry key="saturationOffset" type="number" description="Коррекция насыщенности цвета атмосферы." title="Смещение насыщенности">-0.1</entry>
    <entry key="lightnessOffset" type="number" description="Коррекция яркости атмосферы." title="Смещение яркости">0.2</entry>
  </entry>
</config>

