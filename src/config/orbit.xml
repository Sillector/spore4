<config name="orbit" title="Орбита">
  <entry key="radius" type="object" title="Радиус орбиты" description="Диапазон и базовые значения орбиты планеты.">
    <entry key="min" type="number" title="Минимум" description="Минимально допустимый радиус орбиты.">20</entry>
    <entry key="max" type="number" title="Максимум" description="Максимально допустимый радиус орбиты.">40</entry>
    <entry key="base" type="number" title="Базовый радиус" description="Базовый радиус, используемый для генерации.">25</entry>
    <entry key="initial" type="number" title="Начальный радиус" description="Начальный радиус орбиты при входе в режим.">22</entry>
  </entry>
  <entry key="zoom" type="object" title="Масштабирование" description="Настройки масштабирования камеры вокруг планеты.">
    <entry key="step" type="object" title="Шаг масштабирования" description="Шаги изменения масштаба при отдалении и приближении.">
      <entry key="min" type="number" title="Минимальный шаг" description="Минимальный шаг масштабирования.">1.2</entry>
      <entry key="max" type="number" title="Максимальный шаг" description="Максимальный шаг масштабирования.">3.6</entry>
    </entry>
    <entry key="bufferIncrement" type="number" title="Нарастание буфера" description="Скорость накопления буфера масштабирования.">0.25</entry>
    <entry key="bufferMagnitudeMultiplier" type="number" title="Множитель буфера" description="Множитель, влияющий на силу буфера масштабирования.">0.35</entry>
    <entry key="bufferDecrement" type="number" title="Спад буфера" description="Скорость уменьшения буфера масштабирования при бездействии.">0.2</entry>
    <entry key="radiusExitThreshold" type="number" title="Порог выхода" description="Относительный порог радиуса для выхода из режима орбиты.">0.5</entry>
  </entry>
  <entry key="camera" type="object" title="Камера" description="Параметры камеры в орбитальном режиме.">
    <entry key="offsetY" type="object" title="Вертикальное смещение" description="Диапазон вертикального смещения камеры.">
      <entry key="min" type="number" title="Минимум" description="Минимальное значение смещения камеры по оси Y.">6</entry>
      <entry key="max" type="number" title="Максимум" description="Максимальное значение смещения камеры по оси Y.">14</entry>
    </entry>
    <entry key="offsetZ" type="object" title="Глубинное смещение" description="Диапазон смещения камеры по глубине.">
      <entry key="min" type="number" title="Минимум" description="Минимальное значение смещения камеры по оси Z.">10</entry>
      <entry key="max" type="number" title="Максимум" description="Максимальное значение смещения камеры по оси Z.">26</entry>
    </entry>
    <entry key="follow" type="object" title="Следование" description="Настройки следования камеры за кораблём на орбите.">
      <entry key="rate" type="number" title="Скорость следования" description="Скорость догоняющей интерполяции камеры.">5</entry>
      <entry key="min" type="number" title="Минимальное сглаживание" description="Минимальный коэффициент сглаживания.">0.05</entry>
      <entry key="max" type="number" title="Максимальное сглаживание" description="Максимальный коэффициент сглаживания.">0.2</entry>
    </entry>
    <entry key="entryPosition" type="object" title="Позиция входа" description="Позиция камеры при входе в режим орбиты.">
      <entry key="x" type="number" title="Координата X" description="Координата камеры по оси X при входе.">0</entry>
      <entry key="y" type="number" title="Координата Y" description="Координата камеры по оси Y при входе.">0</entry>
      <entry key="z" type="number" title="Координата Z" description="Координата камеры по оси Z при входе.">48</entry>
    </entry>
  </entry>
  <entry key="controls" type="object" title="Управление" description="Чувствительность управления орбитой.">
    <entry key="thetaSpeed" type="number" title="Скорость по theta" description="Скорость вращения по горизонтальной оси (theta).">0.6</entry>
    <entry key="phiSpeed" type="number" title="Скорость по phi" description="Скорость вращения по вертикальной оси (phi).">0.7</entry>
    <entry key="thetaClamp" type="number" title="Ограничение наклона" description="Максимальный наклон по горизонтальной оси.">0.2</entry>
  </entry>
  <entry key="initialAngles" type="object" title="Начальные углы" description="Стартовые углы камеры при переходе на орбиту.">
    <entry key="theta" type="number" title="Угол theta" description="Начальный угол theta в градусах.">90</entry>
    <entry key="phi" type="number" title="Угол phi" description="Начальный угол phi в градусах.">0</entry>
  </entry>
  <entry key="surface" type="object" title="Поверхность" description="Параметры поверхности планеты.">
    <entry key="radius" type="number" title="Радиус" description="Радиус сферической поверхности планеты.">18</entry>
    <entry key="widthSegments" type="number" title="Сегменты по ширине" description="Количество сегментов по ширине для геометрии поверхности.">64</entry>
    <entry key="heightSegments" type="number" title="Сегменты по высоте" description="Количество сегментов по высоте для геометрии поверхности.">64</entry>
    <entry key="material" type="object" title="Материал поверхности" description="Материал поверхности планеты.">
      <entry key="roughness" type="number" title="Шероховатость" description="Шероховатость материала поверхности.">1</entry>
      <entry key="metalness" type="number" title="Металличность" description="Металличность материала поверхности.">0.05</entry>
    </entry>
  </entry>
  <entry key="atmosphere" type="object" title="Атмосфера" description="Настройки визуализации атмосферы планеты.">
    <entry key="radius" type="number" title="Радиус" description="Радиус оболочки атмосферы.">18.5</entry>
    <entry key="widthSegments" type="number" title="Сегменты по ширине" description="Количество сегментов по ширине для атмосферы.">48</entry>
    <entry key="heightSegments" type="number" title="Сегменты по высоте" description="Количество сегментов по высоте для атмосферы.">48</entry>
    <entry key="opacity" type="number" title="Прозрачность" description="Прозрачность атмосферного слоя.">0.25</entry>
    <entry key="saturationOffset" type="number" title="Смещение насыщенности" description="Коррекция насыщенности цвета атмосферы.">-0.1</entry>
    <entry key="lightnessOffset" type="number" title="Смещение яркости" description="Коррекция яркости атмосферы.">0.2</entry>
  </entry>
</config>
