<config name="scene" title="Трёхмерная сцена">
  <entry key="renderer" type="object" description="Настройки рендера трёхмерной сцены." title="Рендерер">
    <entry key="pixelRatioMax" type="number" description="Максимальный коэффициент pixel ratio для повышения чёткости." title="Максимальный pixel ratio">2</entry>
    <entry key="antialias" type="boolean" description="Включение аппаратного сглаживания в рендерере." title="Сглаживание">true</entry>
  </entry>
  <entry key="scene" type="object" description="Параметры базовой сцены Three.js." title="Сцена">
    <entry key="backgroundColor" type="string" description="Цвет фона сцены." title="Цвет фона">#02040a</entry>
  </entry>
  <entry key="camera" type="object" description="Базовая конфигурация камеры." title="Камера">
    <entry key="fov" type="number" description="Угол обзора камеры в градусах." title="Угол обзора">60</entry>
    <entry key="near" type="number" description="Ближняя плоскость отсечения камеры." title="Ближняя плоскость">0.1</entry>
    <entry key="far" type="number" description="Дальняя плоскость отсечения камеры." title="Дальняя плоскость">1000</entry>
    <entry key="initialPosition" type="object" description="Начальная позиция камеры в сцене." title="Начальная позиция">
      <entry key="x" type="number" description="Координата камеры по оси X при запуске." title="Координата X">0</entry>
      <entry key="y" type="number" description="Координата камеры по оси Y при запуске." title="Координата Y">52</entry>
      <entry key="z" type="number" description="Координата камеры по оси Z при запуске." title="Координата Z">165</entry>
    </entry>
  </entry>
  <entry key="lights" type="object" description="Освещение сцены." title="Освещение">
    <entry key="ambient" type="object" description="Параметры фонового освещения." title="Фоновый свет">
      <entry key="color" type="string" description="Цвет фонового света." title="Цвет">#6f83ff</entry>
      <entry key="intensity" type="number" description="Интенсивность фонового освещения." title="Интенсивность">0.35</entry>
    </entry>
    <entry key="directional" type="object" description="Параметры направленного света." title="Направленный свет">
      <entry key="color" type="string" description="Цвет направленного света." title="Цвет">#ffffff</entry>
      <entry key="intensity" type="number" description="Интенсивность направленного света." title="Интенсивность">0.6</entry>
      <entry key="position" type="object" description="Позиция источника направленного света." title="Позиция">
        <entry key="x" type="number" description="Координата источника света по оси X." title="Координата X">50</entry>
        <entry key="y" type="number" description="Координата источника света по оси Y." title="Координата Y">80</entry>
        <entry key="z" type="number" description="Координата источника света по оси Z." title="Координата Z">40</entry>
      </entry>
    </entry>
  </entry>
  <entry key="input" type="object" description="Параметры ввода пользователя." title="Ввод">
    <entry key="orbitWheelScale" type="number" description="Множитель скорости масштабирования колесом мыши." title="Колесо мыши">140</entry>
  </entry>
</config>

