<config name="system" title="Планетные системы">
  <entry key="planetsPerSystem" type="number" description="Количество планет, генерируемых в одной системе." title="Планет в системе">6</entry>
  <entry key="rotationSpeed" type="number" description="Скорость вращения планетарной системы." title="Скорость вращения">0.05</entry>
  <entry key="zoom" type="object" description="Настройки масштабирования камеры в системе." title="Масштабирование">
    <entry key="step" type="number" description="Шаг изменения масштаба камеры." title="Шаг масштабирования">0.25</entry>
    <entry key="damping" type="number" description="Сила сглаживания переходов масштаба." title="Сглаживание">6</entry>
  </entry>
  <entry key="ship" type="object" description="Параметры движения корабля в системе." title="Корабль">
    <entry key="approachOffset" type="number" description="Смещение корабля при приближении к планете." title="Смещение подхода">3</entry>
    <entry key="entryTargetZ" type="number" description="Глубинная позиция цели для входа в систему." title="Глубина входа">25</entry>
    <entry key="entryShipPosition" type="object" description="Позиция корабля при входе в систему." title="Позиция корабля">
      <entry key="x" type="number" description="Координата корабля по оси X при входе." title="Координата X">0</entry>
      <entry key="y" type="number" description="Координата корабля по оси Y при входе." title="Координата Y">0</entry>
      <entry key="z" type="number" description="Координата корабля по оси Z при входе." title="Координата З">35</entry>
    </entry>
    <entry key="avoidanceClearance" type="number" description="Безопасный зазор при обходе препятствий (звезда, планеты)." title="Зазор обхода">2</entry>
  </entry>
  <entry key="camera" type="object" description="Настройки камеры в системном режиме." title="Камера">
    <entry key="entryPosition" type="object" description="Начальная позиция камеры при входе в систему." title="Позиция входа">
      <entry key="x" type="number" description="Координата камеры по оси X при входе." title="Координата X">0</entry>
      <entry key="y" type="number" description="Координата камеры по оси Y при входе." title="Координата Y">28</entry>
      <entry key="z" type="number" description="Координата камеры по оси Z при входе." title="Координата Z">82</entry>
    </entry>
    <entry key="baseOffset" type="object" description="Базовое смещение камеры при стандартном обзоре." title="Базовое смещение">
      <entry key="y" type="number" description="Смещение камеры по оси Y в базовом состоянии." title="Смещение Y">18</entry>
      <entry key="z" type="number" description="Смещение камеры по оси Z в базовом состоянии." title="Смещение Z">48</entry>
    </entry>
    <entry key="zoomInOffset" type="object" description="Смещение камеры при приближении." title="Смещение при приближении">
      <entry key="y" type="number" description="Вертикальное смещение камеры при приближении." title="Смещение Y">12</entry>
      <entry key="z" type="number" description="Глубинное смещение камеры при приближении." title="Смещение Z">32</entry>
    </entry>
    <entry key="zoomOutOffset" type="object" description="Смещение камеры при отдалении." title="Смещение при отдалении">
      <entry key="y" type="number" description="Вертикальное смещение камеры при отдалении." title="Смещение Y">26</entry>
      <entry key="z" type="number" description="Глубинное смещение камеры при отдалении." title="Смещение Z">72</entry>
    </entry>
    <entry key="follow" type="object" description="Настройки следования камеры за кораблём." title="Следование">
      <entry key="rate" type="number" description="Скорость интерполяции камеры к целевой точке." title="Скорость следования">4.5</entry>
      <entry key="min" type="number" description="Минимальный коэффициент сглаживания движения камеры." title="Минимальное сглаживание">0.05</entry>
      <entry key="max" type="number" description="Максимальный коэффициент сглаживания движения камеры." title="Максимальное сглаживание">0.16</entry>
    </entry>
  </entry>
  <entry key="planet" type="object" description="Параметры генерации планет." title="Планеты">
    <entry key="radiusRange" type="object" description="Диапазон радиусов планет." title="Диапазон радиусов">
      <entry key="min" type="number" description="Минимальный радиус планеты." title="Минимум">1.5</entry>
      <entry key="max" type="number" description="Максимальный радиус планеты." title="Максимум">3.8</entry>
    </entry>
    <entry key="geometrySegments" type="number" description="Количество сегментов геометрии планеты." title="Сегменты геометрии">32</entry>
    <entry key="color" type="object" description="Параметры цветовой палитры планет." title="Цвет">
      <entry key="hueStep" type="number" description="Шаг изменения оттенка между планетами." title="Шаг оттенка">0.13</entry>
      <entry key="saturation" type="number" description="Насыщенность цвета планет." title="Насыщенность">0.6</entry>
      <entry key="lightness" type="number" description="Яркость цвета планет." title="Яркость">0.5</entry>
    </entry>
    <entry key="material" type="object" description="Материал поверхности планет." title="Материал">
      <entry key="roughness" type="number" description="Шероховатость материала планеты." title="Шероховатость">0.7</entry>
      <entry key="metalness" type="number" description="Металличность материала планеты." title="Металличность">0.1</entry>
    </entry>
    <entry key="heightRange" type="number" description="Амплитуда высотного шума поверхности планет." title="Рельеф">1.5</entry>
    <entry key="orbit" type="object" description="Параметры орбит планет в системе." title="Орбиты">
      <entry key="startRadius" type="number" description="Начальный радиус первой орбиты." title="Начальный радиус">12</entry>
      <entry key="incrementRange" type="object" description="Диапазон увеличения радиуса орбиты между планетами." title="Диапазон приращения">
        <entry key="min" type="number" description="Минимальное увеличение радиуса орбиты." title="Минимум">6</entry>
        <entry key="max" type="number" description="Максимальное увеличение радиуса орбиты." title="Максимум">11</entry>
      </entry>
    </entry>
    <entry key="naming" type="object" description="Настройки генерации названий планет." title="Названия">
      <entry key="prefix" type="string" description="Префикс для названия планеты." title="Префикс">Планета </entry>
    </entry>
  </entry>
  <entry key="asteroidBelt" type="object" description="Параметры генерации астероидного пояса." title="Астероидный пояс">
    <entry key="innerRadius" type="number" description="Внутренний радиус астероидного пояса." title="Внутренний радиус">24</entry>
    <entry key="outerRadius" type="number" description="Внешний радиус астероидного пояса." title="Внешний радиус">42</entry>
    <entry key="count" type="number" description="Количество астероидов в поясе." title="Количество">1600</entry>
    <entry key="geometryRadius" type="number" description="Базовый радиус геометрии астероидов." title="Радиус геометрии">0.35</entry>
    <entry key="geometryDetail" type="number" description="Уровень детализации геометрии астероидов." title="Детализация">0</entry>
    <entry key="materialColor" type="string" description="Цвет материала астероидов." title="Цвет материала">#666666</entry>
    <entry key="roughness" type="number" description="Шероховатость материала астероидов." title="Шероховатость">1</entry>
    <entry key="metalness" type="number" description="Металличность материала астероидов." title="Металличность">0</entry>
    <entry key="heightSpread" type="number" description="Диапазон разброса астероидов по высоте." title="Разброс по высоте">2.8</entry>
    <entry key="scaleRange" type="object" description="Диапазон масштабов отдельных астероидов." title="Диапазон масштабов">
      <entry key="min" type="number" description="Минимальный масштаб астероида." title="Минимум">0.4</entry>
      <entry key="max" type="number" description="Максимальный масштаб астероида." title="Максимум">1.2</entry>
    </entry>
  </entry>
</config>

